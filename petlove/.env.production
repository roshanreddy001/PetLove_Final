# Production Environment Variables for PetLove
# Copy this file to .env.prod and update the values for your production environment

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://admin:your_secure_password_here@mongodb:27017/petlove?authSource=admin

# Application Configuration
PORT=8000
APP_PORT=80
ENVIRONMENT=production

# Security (Generate strong secrets for production)
JWT_SECRET=your_jwt_secret_key_here
API_SECRET_KEY=your_api_secret_key_here

# Optional: External MongoDB (if using cloud database)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/petlove?retryWrites=true&w=majority
